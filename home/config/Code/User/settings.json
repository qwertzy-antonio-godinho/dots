{
    "workbench.startupEditor": "none",
    "workbench.editor.wrapTabs": true,
    "workbench.sideBar.location": "right",
    "workbench.colorTheme": "phocus-variant",

    "window.title": "${dirty}${separator}${rootName} [${activeFolderLong}/${activeEditorMedium}] ${remoteName}",
    "window.autoDetectColorScheme": true,

    "telemetry.telemetryLevel": "off",

    "notebook.lineNumbers": "on",

    "breadcrumbs.enabled": false,

    "editor.fontSize": 13,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.fontFamily": "'liga Mononoki', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "editor.cursorStyle": "block",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "One Dark italic",
                "scope": [
                    "comment",
                    "entity.other.attribute-name",
                    "keyword",
                    "markup.underline.link",
                    "storage.modifier",
                    "storage.type",
                    "string.url",
                    "variable.language.super",
                    "variable.language.this"
                ],
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "name": "One Dark italic reset",
                "scope": [
                    "keyword.operator",
                    "keyword.other.type",
                    "storage.modifier.import",
                    "storage.modifier.package",
                    "storage.type.built-in",
                    "storage.type.function.arrow",
                    "storage.type.generic",
                    "storage.type.java",
                    "storage.type.primitive"
                ],
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },

    "httpyac.codelens": {
        "clearHistory": true,
        "showResponseHeaders": true,
        "showVariables": true
    },
    "httpyac.environmentShowStatusBarItem": true,
    "httpyac.environmentStatusBarItemDefaultBackground": "warning",
    "httpyac.environmentStoreSelectedOnStart": true,
    "httpyac.responseViewColumn": "current",

    "debug.terminal.clearBeforeReusing": true,
    "debug.console.fontSize": 13,

    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.scrollback": 2000,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.defaultProfile.linux": "bash",

    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "python.formatting.provider": "black",
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.pycodestyleArgs": [
        "--ignore=E501", "--max-line-length=120"
    ],

    "open-in-browser.default": "brave-browser",

    "docker.containers.description": [
        "ContainerName",
        "Ports",
        "Status"
    ],

    "markdown.preview.fontSize": 13,
    "git.autofetch": false,
    "workbench.iconTheme": "bearded-icons"
}
